<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} | %highlight(%-5p) | %-15.15thread | %-31.31(%logger{32}:%L) | %msg%n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.jboss.weld" level="INFO"/>
    <logger name="com.github.slamdev.morrigna.toolset" level="DEBUG"/>
</configuration>
